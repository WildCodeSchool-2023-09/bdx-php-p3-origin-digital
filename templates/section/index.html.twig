{% extends 'base.html.twig' %}

{% block title %}Sections existantes{% endblock %}

{% block body %}
    <h1 class="sign">Sections existantes</h1>

    {% for section in sections %}
        <div class="section">
            <h2>{{ section.name }}</h2>
            <p class="section_name">{{ section.type.name }}</p>
        </div>

        <div class="
                {% if  section.type.name  == 'Hero Slider' %}
                lazy-slider
                {% elseif  section.type.name  == 'Carousel Statique'%}
                carousel-container
                {% elseif  section.type.name  == 'Carousel Dynamique'%}
                carousel-container
                {% elseif  section.type.name  == 'Grille Dynamique' %}
                videos-category
                {% endif %}">

            {% for video in section.videos %}
                {% if  section.type.name  == 'Hero Slider' %}
                    <div class="slider">
                        <a href="{{ path('show_video', {'slugVideo': video.slugVideo}) }}">
                            <img src="{{ asset('upload/images/' ~ video.image) }}" data-lazy="{{ asset('upload/images/' ~ video.image) }}" alt="{{ video.title }}" class="image_slider">
                        </a>
                        <h2>{{ video.title }}</h2>
                        <p>Date de publication : {{ video.datetime|date('d-m-Y') }}</p>
                    </div>
                {% endif %}
                {% if  section.type.name  == 'Carousel Statique' %}
                    <div class="slider">
                        <a href="{{ path('show_video', {'slugVideo': video.slugVideo}) }}">
                            <img src="{{ asset('upload/images/' ~ video.image) }}" data-lazy="{{ asset('upload/images/' ~ video.image) }}" alt="{{ video.title }}" class="image_carousel">
                        </a>
                    </div>
                {% endif %}
                {% if  section.type.name  == 'Carousel Dynamique' %}
                    <div class="slider">
                        <a href="{{ path('show_video', {'slugVideo': video.slugVideo}) }}">
                            <img src="{{ asset('upload/images/' ~ video.image) }}" data-lazy="{{ asset('upload/images/' ~ video.image) }}" alt="{{ video.title }}" class="image_carousel">
                        </a>
                    </div>
                {% endif %}
                {% if  section.type.name  == 'Grille Dynamique' %}
                    <div class="video">
                        <a href="{{ path('show_video', {'slugVideo': video.slugVideo}) }}">
                            <img src="{{ asset('upload/images/' ~ video.image) }}" data-lazy="{{ asset('upload/images/' ~ video.image) }}" alt="{{ video.title }}" class="image_category">
                        </a>
                        <h2>{{ video.title }}</h2>
                        <p>Date de publication : {{ video.datetime|date('d-m-Y') }}</p>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

    {% endfor %}

{% endblock %}
