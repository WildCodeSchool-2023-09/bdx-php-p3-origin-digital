{% extends 'base.html.twig' %}

{% block title %}Liste des Pages{% endblock %}

{% block body %}
    <div class="page-index">
        <img src="{{ asset('build/images/background.png') }}" alt="background" class="background_img">
    <h1>Liste des Pages</h1>

        <div class="page-list">
            {% for page in pages %}
                <div class="page-card">
                    <h2><a href="{{ path('app_page_show',  {slugPage: page.slugPage}) }}">{{ page.name }}</a></h2>
                </div>
            {% else %}
                <p>Aucune page trouv√©e</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
