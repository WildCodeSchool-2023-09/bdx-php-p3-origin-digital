{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mes favoris</h1>
    {% for video in videos %}
    <div>
        <h2>{{ video.title }}</h2>
        <a href="{{ path('show_video', {'slugVideo': video.slugVideo}) }}">
            <img src="{{ asset('/upload/images/' ~ video.image) }}" alt="{{ video.title }}" class="video-image">
        </a>
    </div>
    {% endfor %}
{% endblock %}
