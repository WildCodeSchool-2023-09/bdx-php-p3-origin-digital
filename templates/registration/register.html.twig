{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="register">
    <h1 class="Sign">Cr√©er son compte</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'register'}}) }}
        {{ form_row(registrationForm.username, {'attr': {'class': 'register-form'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'register-form'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            'label': false,
            'attr': {'class': 'register-form'}
        }) }}

        <button type="submit" class="btn-register">Valider</button>
    {{ form_end(registrationForm) }}

</div>
{% endblock %}
